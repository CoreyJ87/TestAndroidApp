<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.coreyjones.witcher3map" >
    <uses-sdk android:minSdkVersion="15"></uses-sdk>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Witcher3Map"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsMenu"
            android:label="@string/title_activity_settings_menu"
            android:parentActivityName=".Witcher3Map" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="info.coreyjones.witcher3map.Witcher3Map" />
        </activity>
    </application>

</manifest>
